<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/img_login_bg"
        android:scaleType="centerCrop"
        android:src="@drawable/home"
        />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/img_logo_login"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_launcher"
        android:scaleType="centerCrop"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_purpose"
        android:layout_below="@+id/img_logo_login"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:id="@+id/tv_my_purpose"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_view_height"
        android:id="@+id/ll_login_view"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ll_login_choice1"
                android:layout_marginTop="15dp"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/qq_login"
                    android:scaleType="centerCrop"
                    android:id="@+id/img_qq_login"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/qq_login"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_below="@+id/img_qq_login"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="15dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/sina_rect"
                    android:scaleType="centerCrop"
                    android:id="@+id/img_sina_login"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sina_login"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/img_sina_login"
                    android:layout_marginTop="10dp"
                    />

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/blue"
            android:layout_marginTop="10dp"
            android:id="@+id/view_line"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:text="@string/just_look"
            android:textSize="12sp"
            android:textColor="@color/section_selected"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_just_look"
            android:id="@+id/btn_just_look"
            android:layout_gravity="center"/>

    </LinearLayout>

</RelativeLayout>