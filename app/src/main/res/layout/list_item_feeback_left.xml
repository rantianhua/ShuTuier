<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_feedback_time">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="12sp"
            android:paddingBottom="12dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/qipao_right"
            android:id="@+id/tv_feedback_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:maxWidth="200dp"/>

        <ProgressBar
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar_feedback"
            android:layout_toRightOf="@+id/tv_feedback_content"
            android:layout_toEndOf="@+id/tv_feedback_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:id="@+id/img_reply_failed"
            android:layout_toRightOf="@+id/tv_feedback_content"
            android:layout_toEndOf="@+id/tv_feedback_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/tanhao"
            android:scaleType="centerCrop"
            android:visibility="gone"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_feedback_time"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />

</RelativeLayout>