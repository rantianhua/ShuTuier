<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="60dp"
   >

    <include layout="@layout/tv_share"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/tv_share_detail"
      android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        />

    <include layout="@layout/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/tv_message_detail"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/btn_want_buy"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="@string/want_buy"
        android:textColor="@color/btn_want"
        android:background="@drawable/btn_want"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_centerVertical="true"/>

</RelativeLayout>