<resources xmlns:tools="http://schemas.android.com/tools" tools:targetApi="21">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--toolbar颜色-->
        <item name="colorPrimary">#ffffb14b</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">#ff1a2621</item>
        <item name="android:actionMenuTextAppearance">@style/MyActionMenuApp</item>
        <item name="android:windowBackground">@color/white</item>
        <!-- SearchView -->
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
    </style>

    <style name="MyActionMenuApp">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme" parent="@style/AppBaseTheme"/>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView"/>

    <style name="dialog_isbn" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.Isbn.Translucent.Style</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Animation.Isbn.Translucent.Style" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@anim/dialog_isbn</item>
    </style>

    <style name="dialog_cover" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.cover.Translucent.Style</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Animation.cover.Translucent.Style" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@anim/dialog_cover_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_cover_out</item>
    </style>

    <style name="dialog_contacts" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
